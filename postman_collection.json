{
  "info": {
    "name": "Einflix API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Signup",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": { "raw": "{{baseUrl}}/auth/signup", "host": ["{{baseUrl}}"], "path": ["auth", "signup"] },
            "body": { "mode": "raw", "raw": "{\"username\":\"testuser\",\"email\":\"test@example.com\",\"password\":\"password123\"}" }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": { "raw": "{{baseUrl}}/auth/login", "host": ["{{baseUrl}}"], "path": ["auth", "login"] },
            "body": { "mode": "raw", "raw": "{\"email\":\"test@example.com\",\"password\":\"password123\"}" }
          }
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": { "raw": "{{baseUrl}}/auth/refresh", "host": ["{{baseUrl}}"], "path": ["auth", "refresh"] },
            "body": { "mode": "raw", "raw": "{\"refreshToken\":\"sample-refresh-token\"}" }
          }
        }
      ]
    },
    {
      "name": "Profiles",
      "item": [
        {
          "name": "Get Profiles",
          "request": {
            "method": "GET",
            "url": { "raw": "{{baseUrl}}/profiles", "host": ["{{baseUrl}}"], "path": ["profiles"] }
          }
        },
        {
          "name": "Create Profile",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": { "raw": "{{baseUrl}}/profiles", "host": ["{{baseUrl}}"], "path": ["profiles"] },
            "body": { "mode": "raw", "raw": "{\"name\":\"New Profile\"}" }
          }
        }
      ]
    },
    {
      "name": "Media",
      "item": [
        {
          "name": "List Media",
          "request": {
            "method": "GET",
            "url": { "raw": "{{baseUrl}}/media", "host": ["{{baseUrl}}"], "path": ["media"] }
          }
        },
        {
          "name": "Media Detail",
          "request": {
            "method": "GET",
            "url": { "raw": "{{baseUrl}}/media/:id", "host": ["{{baseUrl}}"], "path": ["media", ":id"] }
          }
        },
        {
          "name": "Upload Media",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": { "raw": "{{baseUrl}}/admin/media", "host": ["{{baseUrl}}"], "path": ["admin", "media"] },
            "body": { "mode": "raw", "raw": "{\"title\":\"Sample Media\",\"type\":\"video\"}" }
          }
        },
        {
          "name": "Register View",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": { "raw": "{{baseUrl}}/media/:id/view", "host": ["{{baseUrl}}"], "path": ["media", ":id", "view"] },
            "body": { "mode": "raw", "raw": "{\"position\":120}" }
          }
        }
      ]
    },
    {
      "name": "Recommendations",
      "item": [
        {
          "name": "Get Recommendations",
          "request": {
            "method": "GET",
            "url": { "raw": "{{baseUrl}}/recommendations", "host": ["{{baseUrl}}"], "path": ["recommendations"] }
          }
        }
      ]
    },
    {
      "name": "Payments",
      "item": [
        {
          "name": "Create Payment",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": { "raw": "{{baseUrl}}/payments/create", "host": ["{{baseUrl}}"], "path": ["payments", "create"] },
            "body": { "mode": "raw", "raw": "{\"amount\":1000}" }
          }
        },
        {
          "name": "Payment Webhook",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": { "raw": "{{baseUrl}}/webhooks/payments", "host": ["{{baseUrl}}"], "path": ["webhooks", "payments"] },
            "body": { "mode": "raw", "raw": "{\"status\":\"success\"}" }
          }
        }
      ]
    }
  ]
}